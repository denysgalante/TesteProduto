<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Teste Produto</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/app/app.js"></script>
</head>
<body id="Body">
    <h1>Lista Produtos</h1>
    <div ng-app="ngmodule">
        <div ng-controller="ngcontroller">
            <table class="table table-bordered table-condensed">
                <tr>
                    <td style="width:50%">
                        <input type="button" class="form-control" ng-click="getToken();" value="Gerar Token" />
                    </td>
                    <td ng-if="token && token != 'undefined'" style="width:50%">
                        <b><span>Token: </span></b>{{token}}
                        <br />
                        <b><span>Token Expira em: </span></b> {{counter == "0" ? "Expirou" : counter + " segundos"}}
                    </td>
                </tr>
                <tr>
                    <td style="width:50%">
                        <input type="button" class="form-control" ng-click="getProductsMVC()" value="Buscar Produtos MVC" />
                    </td>
                    <td style="width:50%">
                        <input type="button" class="form-control" ng-click="getProductsAjax()" value="Buscar Produtos Ajax" />
                    </td>
                </tr>
            </table>
            <table class="table table-bordered table-condensed table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Descricao</th>
                        <th>Preco</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="product in products">
                        <td>{{product.id}}</td>
                        <td>{{product.name}}</td>
                        <td>{{product.description}}</td>
                        <td>{{product.price}}</td>
                    </tr>
                </tbody>
            </table>
            <span>{{message}}</span>
        </div>
    </div>
</body>
</html>
